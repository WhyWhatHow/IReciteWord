<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- TODO just want to advice you : change statusBar color to make it petty  -->
        <!--<item name="android:windowTranslucentStatus">false</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:statusBarColor">@color/color_0176da</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>

        <!-- TODO just want to advice you : change statusBar color to make it petty  -->
        <!--<item name="android:windowTranslucentStatus">false</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:statusBarColor">@color/color_0176da</item>
        <!-- 溢出菜单图标颜色-->
        <!--<item name="colorControlNormal">@android:color/white</item>-->
    </style>

    <style name="buttontext_normal">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottom_bar_style">
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
<item name="android:background">@drawable/shap_btn_normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
    </style>


    <!-- TODO xpf: Base application theme. -->

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="ColorTranslucentTheme" parent="AppTheme">

    </style>

    <style name="Theme.Translucent.Navigation" parent="AppTheme">

    </style>

    <style name="Theme.ToolBar.Base.Other" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textColorPrimary">@color/color_red</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/color_red</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ToolBar.Base.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="Theme.ToolBar.Base.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_43d28d</item>
    </style>

    <style name="Theme.ZhiHu" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/color_0176da</item>

    </style>

    <style name="Theme.Other" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="windowNoTitle">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/color_0176da</item>

    </style>

    <style name="Theme.ToolBar.ZhiHu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.ZhiHu</item>
    </style>

    <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>

    </style>

    <style name="Theme.Drawer.ArrowAnimation" parent="AppTheme">
        <!-- 箭头 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>
    <!-- 箭头颜色 -->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <!-- TODO: base Button-->
    <style name="base_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>


    </style>

    <style name="base_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:orientation">vertical</item>

    </style>

</resources>
